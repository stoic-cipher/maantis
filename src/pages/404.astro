---
import Layout from '../layouts/Layout.astro';
---

<Layout
  title="404 - Page Not Found"
  description="The page you're looking for doesn't exist. Return to the homepage or explore our services."
>
  <main class="error-page">
    <div class="error-container">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-description">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="error-actions">
          <a href="/" class="error-button primary">Back to Home</a>
          <a href="/services" class="error-button secondary">View Services</a>
        </div>
      </div>
      <div class="error-visual">
        <svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="100" cy="100" r="80" stroke="var(--color-border)" stroke-width="2" opacity="0.3"/>
          <circle cx="100" cy="100" r="60" stroke="var(--color-strike)" stroke-width="2" opacity="0.5"/>
          <circle cx="100" cy="100" r="40" stroke="var(--color-strike)" stroke-width="3" opacity="0.7"/>
          <circle cx="100" cy="100" r="10" fill="var(--color-strike)"/>
        </svg>
      </div>
    </div>
  </main>
</Layout>

<style>
  .error-page {
    min-height: calc(100vh - var(--nav-height) - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-2xl) var(--space-md);
    background: linear-gradient(180deg, var(--color-depth) 0%, var(--color-depth-light) 100%);
  }

  .error-container {
    max-width: 800px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
  }

  .error-content {
    text-align: left;
  }

  .error-code {
    font-size: 6rem;
    font-weight: 800;
    font-family: var(--font-mono);
    background: linear-gradient(135deg, var(--color-strike) 0%, var(--color-accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--space-md);
  }

  .error-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
  }

  .error-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  .error-actions {
    display: flex;
    gap: var(--space-md);
  }

  .error-button {
    padding: 1rem 2rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
    font-size: 1rem;
    display: inline-block;
  }

  .error-button.primary {
    background: linear-gradient(135deg, var(--color-strike) 0%, var(--color-strike-dim) 100%);
    color: var(--color-depth);
  }

  .error-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 217, 255, 0.3);
  }

  .error-button.secondary {
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
    background: rgba(26, 31, 38, 0.5);
    backdrop-filter: blur(10px) saturate(150%);
    -webkit-backdrop-filter: blur(10px) saturate(150%);
  }

  .error-button.secondary:hover {
    border-color: var(--color-strike);
    color: var(--color-strike);
    background: rgba(26, 31, 38, 0.7);
  }

  .error-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-visual svg {
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
  }

  @media (max-width: 768px) {
    .error-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .error-content {
      text-align: center;
    }

    .error-code {
      font-size: 4rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .error-button {
      width: 100%;
      max-width: 300px;
    }

    .error-visual {
      order: -1;
    }
  }
</style>
